{
    "name": "AirPollutionForecastNewModelWithouthTimeAverageLessAtentionHeadsMoreBlocksMoreAutoRegresive",
    "n_gpu": 1,

    "arch": {
        "type": "MultiStreamTransformerModel",
        "args": {
            "weather_time_dims": 4,
            "pollution_time_dims": 8,
            "weather_fields": 8,
            "pollution_features": 146,
            "weather_embedding_size": 128,
            "pollution_embedding_size": 128,
            "attention_heads": 2,
            "output_size": 134,
            "lat_size": 25,
            "lon_size": 25,
            "dropout": 0.1,
            "weather_transformer_blocks": 5,
            "pollution_transformer_blocks": 5
        }
    },
    "data_loader": {
        "type": "MLforecastDataLoader",
        "args": {
            "pollution_folder": "/home/olmozavala/DATA/AirPollution/PollutionCSV",
            "weather_folder": "/home/olmozavala/DATA/AirPollution/WRF_NetCDF",
            "training_folder": "/home/olmozavala/DATA/AirPollution/TrainingData",
            "years": [2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020],
            "pollutants_to_keep": ["co", "nodos", "otres", "pmdiez", "pmdoscinco"],
            "prev_pollutant_hours": 8,
            "prev_weather_hours": 2,
            "next_weather_hours": 1,
            "auto_regresive_steps": 8,
            "batch_size": 1536,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "trainer": {
        "epochs": 3000,
        "save_dir": "/LUSTRE/HOME/olmozavala/DATA/AirPollution/OUTPUT/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 20,
        "tensorboard": true,
        "log_dir": "saved/runs",
        "auto_regresive_steps": 8,
        "epochs_before_increase_auto_regresive_steps": 8
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 1e-5,
            "amsgrad": true
        }
    },
    "loss": "asymmetric_weighted_mse_loss",
    "metrics": ["masked_rmse_metric"],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "min",
            "factor": 0.1,
            "patience": 10,
            "threshold": 1e-4,
            "threshold_mode": "rel",
            "cooldown": 0,
            "min_lr": 1e-8,
            "eps": 1e-8
        }
    },
    "test": {
        "model_path": "/home/olmozavala/DATA/AirPollution/OUTPUT/models/AirPollutionForecastNewLossLargeWeightFiveTotalWeatherTwentyFourAutoRegresiveSteps/0523_161128",
        "visualize_batch": true,
        "data_loader": {
            "years": [2022, 2023],
            "batch_size": 2,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 2,
            "auto_regresive_steps": 24
        },
        "visualize":{
            "output_folder": "/LUSTRE/HOME/olmozavala/DATA/AirPollution/OUTPUT/imgs",
            "weather_var_idx": 0,
            "contaminant_name": "pmdoscinco",
            "weather_var_name": "T2"
        }
    }
}
